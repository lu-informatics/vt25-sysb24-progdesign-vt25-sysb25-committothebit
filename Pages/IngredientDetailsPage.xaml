<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Informatics.Appetite.ViewModels"
             x:Class="Informatics.Appetite.Pages.IngredientDetailsPage"
             x:DataType="viewmodels:IngredientDetailsViewModel"
             Title="Ingredient Details"
             BackgroundColor="White">
    <ScrollView>
        <VerticalStackLayout Spacing="15"
                             Padding="20">
            <!-- Ingredient Details Section -->
            <Border Stroke="#E0E0E0"
                    StrokeThickness="1"
                    Padding="15"
                    Margin="0,0,0,10">
                <VerticalStackLayout Spacing="12">
                    <!-- Select Ingredient -->
                    <Label Text="Select Ingredient:"
                           FontAttributes="Bold"
                           FontSize="16"
                           TextColor="Black"/>
                    <Picker ItemsSource="{Binding Ingredients}"
                            SelectedItem="{Binding SelectedIngredient, Mode=TwoWay}"
                            ItemDisplayBinding="{Binding Name}"
                            FontSize="16"
                            TextColor="Black"
                            BackgroundColor="#F7F7F7"/>
                    <!-- Ingredient Amount -->
                    <Label Text="Amount:"
                           FontAttributes="Bold"
                           FontSize="16"
                           TextColor="Black"/>
                    <Entry Text="{Binding SelectedIngredient.Amount, Mode=TwoWay}"
                           Placeholder="Enter amount"
                           FontSize="16"
                           TextColor="Black"
                           Keyboard="Numeric"
                           BackgroundColor="#F7F7F7"/>
                    <!-- Ingredient Unit -->
                    <Label Text="Unit:"
                           FontAttributes="Bold"
                           FontSize="16"
                           TextColor="Black"/>
                    <Entry Text="{Binding SelectedIngredient.Unit, Mode=TwoWay}"
                           FontSize="16"
                           TextColor="Black"
                           IsReadOnly="True"
                           BackgroundColor="#F7F7F7"/>
                    <!-- Associated Recipes -->
                    <Label Text="Associated Recipes:"
                           FontAttributes="Bold"
                           FontSize="16"
                           TextColor="Black"/>
                    <CollectionView ItemsSource="{Binding Recipes}"
                                    SelectionMode="None">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Label Text="{Binding Name}"
                                       FontSize="16"
                                       TextColor="Black"/>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Border>
            <!-- Save Changes Button -->
            <Button Text="Save Changes"
                    Command="{Binding SaveIngredientCommand}"
                    BackgroundColor="#4A90E2"
                    TextColor="White"
                    FontAttributes="Bold"
                    Padding="12"/>
            <!-- Delete Button -->
            <Button Text="Delete"
                    Command="{Binding DeleteIngredientCommand}"
                    BackgroundColor="#E74C3C"
                    TextColor="White"
                    FontAttributes="Bold"
                    Padding="12"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>