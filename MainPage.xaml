<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="Informatics.Appetite.MainPage"
            BackgroundColor="#F9F9F9">


   <ScrollView>
       <VerticalStackLayout Padding="30" Spacing="25">


           <!-- Hero Image -->
           <Image
               Source="bakgrundsbild2.jpg"
               HeightRequest="400"
               Aspect="AspectFill"
               Margin="0,60,0,20" />




           <!-- Welcome Text -->
           <Label
               Text="Välkommen till Appetite!"
               FontSize="28"
               FontAttributes="Bold"
               TextColor="#333"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               Margin="0,50,0,0"/>


           <!-- Subtitle -->
           <Label
               Text="Explore new recipes, manage your ingrediens och plan your meals smarter."
               FontSize="18"
               TextColor="#666"
               HorizontalTextAlignment="Center"
               Margin="0,10,0,5"/>


           <!-- Featured Image Section -->
           <HorizontalStackLayout Spacing="15" HorizontalOptions="Center">
               <Image Source="recipe.png" WidthRequest="100" HeightRequest="100"/>
               <Image Source="ingredients.png" WidthRequest="100" HeightRequest="100"/>
               <Image Source="meal_plan.png" WidthRequest="100" HeightRequest="100"/>
           </HorizontalStackLayout>


           <!-- Navigation Buttons -->
           <VerticalStackLayout Spacing="15" Margin="0,5,0,0">
               <Button
                   Text="🧑‍🍳 Utforska Recept"
                   BackgroundColor="#4CAF50"
                   TextColor="White"
                   FontSize="18"
                   Clicked="OnExploreRecipesClicked"
                   WidthRequest ="300"/>


               <Button
                   Text="📋 Mina Ingredienser"
                   BackgroundColor="#FFC107"
                   TextColor="White"
                   FontSize="18"
                   Clicked="OnMyIngredientsClicked"
                   WidthRequest ="300"/>


               <Button
                   Text="🗓️ Sparade recept"
                   BackgroundColor="#3F51B5"
                   TextColor="White"
                   FontSize="18"
                   Clicked="OnMealPlanClicked"
                   WidthRequest ="300"/>


           </VerticalStackLayout>


       </VerticalStackLayout>
   </ScrollView>
</ContentPage>